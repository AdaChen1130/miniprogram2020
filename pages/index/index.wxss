.profile-container{
  background-color:#fff ;
  margin-top: 300rpx;
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  
  
  .wrap{
  display: inline-block;
  margin-top: 2rem;
  }
  .wrap-item{
    display: flex;
     width :100%;
     height: 5rem;
     align-items: center;
     flex-direction: column;
     font-family: cursive;
  
    }
  .profile{
    width:500rpx;
    height: 80rpx;
    font-size: 50rpx;
    border-radius: 40rpx;
    border: 5rpx solid #fdb92c;
    background-color: #f7deae;
    text-align: center;
    line-height: 80rpx;
  }